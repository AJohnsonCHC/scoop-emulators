{
    "homepage": "https://www.retroarch.com/",
    "version": "1.9.4",
    "license": "GPL-3.0-only",
    "description": "Frontend for emulators, game engines and media players.",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.9.4/windows/x86_64/RetroArch.7z",
            "hash": "fc48ce12426f6b731479cd9b51cb6e83594f70b7a55adb448915f5e52a629abc"
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.9.4/windows/x86/RetroArch.7z",
            "hash": "9fd513b412f19678d0d8d0eef27c6a0a0faddcd8a698fd037b4ccd4c804e8d0f"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) {",
        "    New-Item \"$dir\\retroarch.cfg\" -Type File | Out-Null",
        "}"
    ],
    "bin": "retroarch.exe",
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "overlays",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "states",
        "system",
        "thumbnails",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86/RetroArch.7z"
            }
        }
    }
}
