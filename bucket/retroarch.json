{
    "homepage": "https://www.retroarch.com/",
    "version": "1.8.8",
    "license": "GPL-3.0-only",
    "description": "Frontend for emulators, game engines and media players.",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.8.8/windows/x86_64/RetroArch.7z",
            "hash": "2caaaf2b2a6ecfb84e4a3445ac1fe635f9432dba53c1fefeb26d0619e3f69094"
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.8.8/windows/x86/RetroArch.7z",
            "hash": "5e30708ef334e87a50ac743456aa708de91c92051d38dadc93c85ae27c6e273e"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) {",
        "    New-Item \"$dir\\retroarch.cfg\" -Type File | Out-Null",
        "}"
    ],
    "bin": "retroarch.exe",
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "overlays",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "states",
        "system",
        "thumbnails",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86/RetroArch.7z"
            }
        }
    }
}
