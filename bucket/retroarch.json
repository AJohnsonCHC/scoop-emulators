{
    "homepage": "https://www.retroarch.com/",
    "version": "1.8.6",
    "license": "GPL-3.0-only",
    "description": "Frontend for emulators, game engines and media players.",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.8.6/windows/x86_64/RetroArch.7z",
            "hash": "f300bf527a3d1a8af59828457313a24baa3099fa97e65f31af850ee6bd6878aa"
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.8.6/windows/x86/RetroArch.7z",
            "hash": "24245d408509349dc430dd43dc802850d619d3e60301309a5b32e39cf5f17d33"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) {",
        "    New-Item \"$dir\\retroarch.cfg\" -Type File | Out-Null",
        "}"
    ],
    "bin": "retroarch.exe",
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "overlays",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "states",
        "system",
        "thumbnails",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86/RetroArch.7z"
            }
        }
    }
}
